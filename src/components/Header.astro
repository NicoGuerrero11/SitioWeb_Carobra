---
import { Image } from 'astro:assets';
import logoCarobra from '../assets/images/logo/CAROBRA HORIZONTAL COLOR  (1).png';
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-1">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="block">
          <Image 
            src={logoCarobra}
            alt="Carobra - Consultores Especializados"
            class="h-20 w-auto md:h-24 lg:h-35"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="flex items-baseline space-x-6">
          <a href="/beneficios" class="text-gray-700 hover:text-carobra-light px-3 rounded-md text-sm font-medium transition-colors">
            Beneficios
          </a>
          <a href="/nosotros" class="text-gray-700 hover:text-carobra-light px-3 rounded-md text-sm font-medium transition-colors">
            Nosotros
          </a>
          <a href="/servicios" class="text-gray-700 hover:text-carobra-light px-3 rounded-md text-sm font-medium transition-colors">
            Servicios
          </a>
          <a href="/carrera" class="text-gray-700 hover:text-carobra-light px-3 rounded-md text-sm font-medium transition-colors">
            Trabaja con nosotros
          </a>
          <a href="/contacto" class="text-gray-700 hover:text-carobra-light px-3 rounded-md text-sm font-medium transition-colors">
            Contacto
          </a>
        </div>
      </div>


      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button bg-gray-100 p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-carobra-primary" aria-expanded="false">
          <span class="sr-only">Abrir men√∫ principal</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-200">
        <a href="/beneficios" class="text-gray-700 hover:text-carobra-light block px-3 py-2 rounded-md text-base font-medium">
          Beneficios
        </a>
        <a href="/nosotros" class="text-gray-700 hover:text-carobra-light block px-3 py-2 rounded-md text-base font-medium">
          Nosotros
        </a>
        <a href="/servicios" class="text-gray-700 hover:text-carobra-light block px-3 py-2 rounded-md text-base font-medium">
          Servicios
        </a>
        <a href="/carrera" class="text-gray-700 hover:text-carobra-light block px-3 py-2 rounded-md text-base font-medium">
          Trabaja con nosotros
        </a>
        <a href="/contacto" class="text-gray-700 hover:text-carobra-light block px-3 py-2 rounded-md text-base font-medium">
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>