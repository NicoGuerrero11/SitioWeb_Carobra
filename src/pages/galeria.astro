---
import Layout from "../layouts/Layout.astro";
import albums from "../data/flickr-albums.json";
import SchemaImageGallery from "../components/seo/SchemaImageGallery.astro";
import BreadcrumbsGaleria from "../components/seo/BreadcrumbsGaleria.astro";

// Configuración del usuario de Flickr
const FLICKR_USER_ID = "161628002@N05"; // ID de usuario de carobra
const FLICKR_USERNAME = "carobra";
---

<Layout 
  title="Galería de Fotos y Eventos | Carobra Consultores" 
  description="Descubre nuestra galería de fotos de eventos, convenciones, aniversarios y reconocimientos de Carobra. Más de 13 álbumes con eventos corporativos, premios Xcellence Awards, convenciones TDC y celebraciones de aniversario."
>
    <!-- SEO: Schema.org Markup -->
    <SchemaImageGallery albums={albums} />
    
    <!-- Breadcrumbs -->
    <BreadcrumbsGaleria />

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-carobra-dark to-carobra-primary text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: 'Urbanist', sans-serif;">
                Galería de Fotos
            </h1>
            <p class="text-xl text-white/90 max-w-3xl mx-auto" style="font-family: 'Poppins', sans-serif;">
                Descubre momentos y proyectos de nuestro equipo
            </p>
        </div>
    </section>

    <!-- Gallery Section - Grid de Álbumes -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Grid de álbumes estilo Flickr -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {albums.map((album) => (
                    <a
                        href={album.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group block bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100"
                    >
                        <!-- Imagen del álbum -->
                        <div class="relative aspect-video bg-carobra-light-bg overflow-hidden">
                            <img
                                src={album.coverImage}
                                alt={album.title}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                loading="lazy"
                            />
                            <!-- Overlay con info -->
                            <div class="absolute inset-0 bg-gradient-to-t from-carobra-dark/80 via-carobra-primary/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <div class="absolute bottom-0 left-0 right-0 p-3">
                                    <p class="text-white text-xs font-medium" style="font-family: 'Poppins', sans-serif;">
                                        {album.photos} fotos • {album.views} vistas
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Título del álbum -->
                        <div class="p-2.5 bg-white">
                            <h3 class="font-semibold text-carobra-dark group-hover:text-carobra-light transition-colors line-clamp-2 leading-tight" style="font-family: 'Urbanist', sans-serif; font-size: 24px !important;">
                                {album.title}
                            </h3>
                            <p class="text-gray-600 mt-1" style="font-family: 'Poppins', sans-serif; font-size: 10px !important;">
                                {album.photos} {album.photos === 1 ? 'foto' : 'fotos'} • {album.views} vistas
                            </p>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Mensaje si no hay álbumes -->
            {albums.length === 0 && (
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-carobra-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <p class="mt-4 text-carobra-dark" style="font-family: 'Urbanist', sans-serif;">No hay álbumes para mostrar</p>
                    <p class="text-sm text-gray-600 mt-2" style="font-family: 'Poppins', sans-serif;">Agrégalos en src/data/flickr-albums.json</p>
                </div>
            )}

            <!-- Botón Ver más álbumes -->
            {albums.length > 0 && (
                <div class="text-center mt-12">
                    <a
                        href="https://www.flickr.com/photos/carobra/albums/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-3 bg-gradient-to-r from-carobra-primary to-carobra-light text-white px-8 py-4 rounded-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 font-semibold"
                        style="font-family: 'Poppins', sans-serif;"
                    >
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span>Ver más álbumes en Flickr</span>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            )}

        </div>
    </section>
</Layout>
