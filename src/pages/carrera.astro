---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import trajeImg from '../assets/images/carrera/traje.webp';
import trabajandoImg from '../assets/images/carrera/trabajando.webp';
---

<Layout title="Trabaja con nosotros | Carobra">
	<section style="background-color: #DEDEDE" class="py-16 lg:py-24">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Título centrado -->
			<h1 class="mb-12 text-gray-900 text-center">Sé parte de Carobra</h1>

			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
				<!-- Columna izquierda - Imágenes -->
				<div class="space-y-8">
					<div class="rounded-2xl overflow-hidden shadow-lg">
						<Image 
							src={trajeImg}
							alt="Asesor profesional de Carobra"
							class="w-full h-full object-cover aspect-[3/4]"
						/>
					</div>
					<div class="rounded-2xl overflow-hidden shadow-lg">
						<Image 
							src={trabajandoImg}
							alt="Persona trabajando en Carobra"
							class="w-full h-full object-cover aspect-[16/9]"
						/>
					</div>
				</div>

				<!-- Columna derecha - Formulario -->
				<div>
					<p class="text-gray-700 mb-8 paragraph-2">
						Conviértete en asesor financiero y transforma tu futuro con el respaldo de un broker líder en México.
					</p>

					<form class="space-y-6">
						<!-- Nombre -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Nombre <span class="text-gray-500">(required)</span>
							</label>
							<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
								<div>
									<label class="block text-xs text-gray-600 mb-1">First Name</label>
									<input 
										type="text" 
										name="firstName" 
										required
										class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
										style="background-color: #DEDEDE;"
									/>
								</div>
								<div>
									<label class="block text-xs text-gray-600 mb-1">Last Name</label>
									<input 
										type="text" 
										name="lastName" 
										required
										class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
										style="background-color: #DEDEDE;"
									/>
								</div>
							</div>
						</div>

						<!-- Email -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Email <span class="text-gray-500">(required)</span>
							</label>
							<input 
								type="email" 
								name="email" 
								required
								class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
								style="background-color: #DEDEDE;"
							/>
						</div>

						<!-- Teléfono -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Phone <span class="text-gray-500">(required)</span>
							</label>
							<input 
								type="tel" 
								name="phone" 
								required
								class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
								style="background-color: #DEDEDE;"
							/>
						</div>

						<!-- CV -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								CV <span class="text-gray-500">(required)</span>
							</label>
							<div class="border border-dashed border-black rounded-lg p-8 text-center hover:border-black hover:!bg-white transition-colors cursor-pointer" style="background-color: #DEDEDE;">
								<input 
									type="file" 
									name="cv" 
									accept=".pdf,.doc,.docx"
									required
									class="hidden"
									id="cv-upload"
								/>
								<label for="cv-upload" class="cursor-pointer">
									<div class="text-5xl text-gray-400 mb-2">+</div>
									<p class="text-gray-600 font-medium">Add a File</p>
								</label>
							</div>
						</div>

						<!-- Mensaje -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Message
							</label>
							<textarea 
								name="message" 
								rows="4"
								class="w-full px-4 py-3 border border-black rounded-lg hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors resize-none"
								style="background-color: #DEDEDE;"
							></textarea>
						</div>

						<!-- Botón Submit -->
						<div class="flex justify-center">
							<button 
								type="submit"
								class="btn-primary bg-gray-800 hover:bg-gray-900 text-white py-3 px-8 rounded-lg transition-colors"
							>
								Aplica Ahora
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</Layout>
