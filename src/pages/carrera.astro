---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import trajeImg from '../assets/images/carrera/traje.webp';
import trabajandoImg from '../assets/images/carrera/trabajando.webp';
import SchemaJobPosting from '../components/seo/SchemaJobPosting.astro';
import SchemaBreadcrumbs from '../components/seo/SchemaBreadcrumbs.astro';
---

<SchemaBreadcrumbs items={[
  { name: 'Inicio', url: '/' },
  { name: 'Trabaja con nosotros', url: '/carrera' }
]} />

<Layout
  title="Trabaja en Carobra | Vacantes Asesor Financiero - Broker #1 AFORE" 
  description="Aplica ahora como asesor financiero en Carobra. Broker #1 en AFORE por 12 años. Comisiones competitivas, capacitación continua, crecimiento profesional. 1,500+ asesores en México. Envía tu CV."
>
	<!-- Schema.org JobPosting -->
	<SchemaJobPosting />
	
	<section class="bg-carobra-light-bg py-16 lg:py-24">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Título centrado -->
			<h1 class="mb-12 text-carobra-dark text-center">Sé parte de Carobra</h1>

			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
				<!-- Columna izquierda - Imágenes -->
				<div class="space-y-8">
					<div class="rounded-2xl overflow-hidden shadow-lg">
						<Image 
							src={trajeImg}
							alt="Asesor profesional de Carobra"
							class="w-full h-full object-cover aspect-[3/4]"
						/>
					</div>
					<div class="rounded-2xl overflow-hidden shadow-lg">
						<Image 
							src={trabajandoImg}
							alt="Persona trabajando en Carobra"
							class="w-full h-full object-cover aspect-[16/9]"
						/>
					</div>
				</div>

				<!-- Columna derecha - Formulario -->
				<div>
					<p class="text-gray-700 mb-8 paragraph-2">
						Conviértete en asesor financiero y transforma tu futuro con el respaldo de un broker líder en México.
					</p>

					<form id="carrera-form" class="space-y-6">
						<!-- Mensaje de estado -->
						<div id="form-message" class="hidden p-4 rounded-lg"></div>

						<!-- Nombre -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Nombre <span class="text-gray-500">(required)</span>
							</label>
							<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
								<div>
									<label class="block text-xs text-gray-600 mb-1">First Name</label>
									<input 
										type="text" 
										name="firstName" 
										required
										class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
										style="background-color: #DEDEDE;"
									/>
								</div>
								<div>
									<label class="block text-xs text-gray-600 mb-1">Last Name</label>
									<input 
										type="text" 
										name="lastName" 
										required
										class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
										style="background-color: #DEDEDE;"
									/>
								</div>
							</div>
						</div>

						<!-- Email -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Email <span class="text-gray-500">(required)</span>
							</label>
							<input 
								type="email" 
								name="email" 
								required
								class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
								style="background-color: #DEDEDE;"
							/>
						</div>

						<!-- Teléfono -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Phone <span class="text-gray-500">(required)</span>
							</label>
							<input 
								type="tel" 
								name="phone" 
								required
								class="w-full px-4 py-3 border border-black rounded-full hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors"
								style="background-color: #DEDEDE;"
							/>
						</div>

						<!-- CV -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								CV <span class="text-gray-500">(required)</span>
							</label>
							<div class="border border-dashed border-black rounded-lg p-8 text-center hover:border-black hover:!bg-white transition-colors cursor-pointer" style="background-color: #DEDEDE;">
								<input 
									type="file" 
									name="cv" 
									accept=".pdf,.doc,.docx"
									required
									class="hidden"
									id="cv-upload"
								/>
								<label for="cv-upload" class="cursor-pointer">
									<div class="text-5xl text-gray-400 mb-2">+</div>
									<p class="text-gray-600 font-medium" id="file-name">Add a File</p>
								</label>
							</div>
						</div>

						<!-- Mensaje -->
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-2">
								Message
							</label>
							<textarea 
								name="message" 
								rows="4"
								class="w-full px-4 py-3 border border-black rounded-lg hover:!bg-white focus:!bg-white focus:ring-1 focus:ring-black focus:border-black transition-colors resize-none"
								style="background-color: #DEDEDE;"
							></textarea>
						</div>

						<!-- Botón Submit -->
						<div class="flex justify-center">
						<button 
							type="submit"
							id="submit-btn"
							class="btn-primary bg-carobra-primary hover:bg-carobra-dark text-white py-3 px-8 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
							>
								<span id="btn-text">Aplica Ahora</span>
								<span id="btn-loading" class="hidden">Enviando...</span>
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</Layout>

<script>
	// Mostrar nombre de archivo seleccionado
	const fileInput = document.getElementById('cv-upload') as HTMLInputElement;
	const fileNameDisplay = document.getElementById('file-name');

	if (fileInput && fileNameDisplay) {
		fileInput.addEventListener('change', (e) => {
			const target = e.target as HTMLInputElement;
			if (target.files && target.files[0]) {
				fileNameDisplay.textContent = target.files[0].name;
			} else {
				fileNameDisplay.textContent = 'Add a File';
			}
		});
	}

	// Manejar envío del formulario
	const form = document.getElementById('carrera-form') as HTMLFormElement;
	const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
	const btnText = document.getElementById('btn-text');
	const btnLoading = document.getElementById('btn-loading');
	const formMessage = document.getElementById('form-message');

	if (form) {
		form.addEventListener('submit', async (e) => {
			e.preventDefault();

			// Mostrar estado de carga
			if (submitBtn && btnText && btnLoading && formMessage) {
				submitBtn.disabled = true;
				btnText.classList.add('hidden');
				btnLoading.classList.remove('hidden');
				formMessage.classList.add('hidden');

				try {
					// Enviar formulario
					const formData = new FormData(form);
					const response = await fetch('/api/carrera', {
						method: 'POST',
						body: formData,
					});

					const result = await response.json();

					if (response.ok) {
						// Mostrar mensaje de éxito
						formMessage.textContent = '¡Aplicación enviada exitosamente! Nos pondremos en contacto contigo pronto.';
						formMessage.className = 'p-4 rounded-lg bg-green-100 text-green-800';
						formMessage.classList.remove('hidden');

						// Limpiar formulario
						form.reset();
						if (fileNameDisplay) {
							fileNameDisplay.textContent = 'Add a File';
						}

						// Scroll al mensaje
						formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
					} else {
						// Mostrar mensaje de error
						formMessage.textContent = result.error || 'Error al enviar la aplicación. Por favor, inténtalo de nuevo.';
						formMessage.className = 'p-4 rounded-lg bg-red-100 text-red-800';
						formMessage.classList.remove('hidden');
						formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
					}
				} catch (error) {
					console.error('Error:', error);
					formMessage.textContent = 'Error de conexión. Por favor, verifica tu conexión a internet e inténtalo de nuevo.';
					formMessage.className = 'p-4 rounded-lg bg-red-100 text-red-800';
					formMessage.classList.remove('hidden');
					formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
				} finally {
					// Restaurar botón
					submitBtn.disabled = false;
					btnText.classList.remove('hidden');
					btnLoading.classList.add('hidden');
				}
			}
		});
	}
</script>
