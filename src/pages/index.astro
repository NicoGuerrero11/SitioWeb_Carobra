---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Carobra - Sitio Web">
	<div class="container mx-auto px-4 py-16">
		<div class="text-center">
			<h1 class="text-6xl font-bold text-blue-600 mb-4">
				Bienvenido a Carobra
			</h1>
			<p class="text-xl text-gray-600 mb-8">
				Tu proyecto con Astro, Tailwind y Vercel está listo
			</p>
			<div class="space-x-4">
				<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors">
					Comenzar
				</button>
				<button class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-bold py-2 px-6 rounded-lg transition-colors">
					Más información
				</button>
			</div>
		</div>
	</div>
</Layout>
